<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/up"
        android:layout_width="match_parent"
        android:layout_height="@dimen/updown_height"
        android:layout_margin="@dimen/small_margin"
        app:cardCornerRadius="@dimen/base_margin"
        android:elevation="@dimen/small_margin"
        app:layout_constraintTop_toTopOf="parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:scaleType="centerCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/brokeback_mountain" />

        <ImageView
            android:id="@+id/imageView2"
            android:scaleType="centerCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/pride" />

        <ImageView
            android:id="@+id/imageView3"
            android:scaleType="centerCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1 "
            app:srcCompat="@drawable/milk" />

        <ImageView
            android:id="@+id/imageView4"
            android:scaleType="centerCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/rapsody"/>
    </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_margin"
        android:layout_marginEnd="16dp"
        android:text="@string/disclaimer"
        android:autoLink="web"
        android:linksClickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/up"/>

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="@dimen/butt_width"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_back"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/down"
        android:layout_margin="@dimen/margin_butt">

    <Button
        android:id="@+id/button_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu_button"
        android:onClick="onClickToastMenu"
        android:textColor="@android:color/white"
        android:background="?selectableItemBackgroundBorderless"
        tools:ignore="UsingOnClickInXml" />

    <Button
        android:id="@+id/favor_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/favor_button"
        android:onClick="onClickToastFavor"
        android:textColor="@android:color/white"
        android:background="?selectableItemBackgroundBorderless"
        tools:ignore="UsingOnClickInXml" />

    <Button
        android:id="@+id/later_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/later_button"
        android:onClick="onClickToastLater"
        android:textColor="@android:color/white"
        android:background="?selectableItemBackgroundBorderless"
        tools:ignore="UsingOnClickInXml" />

    <Button
        android:id="@+id/coll_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/coll_button"
        android:onClick="onClickToastMenuColl"
        android:textColor="@android:color/white"
        android:background="?selectableItemBackgroundBorderless"
        tools:ignore="UsingOnClickInXml" />

    <Button
        android:id="@+id/set_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings_button"
        android:textColor="@android:color/white"
        android:onClick="onClickToastMenuSet"
        android:background="?selectableItemBackgroundBorderless"
        tools:ignore="UsingOnClickInXml" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/down"
        android:layout_width="match_parent"
        android:layout_height="@dimen/updown_height"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/teal_200"/>

</androidx.constraintlayout.widget.ConstraintLayout>